<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".parametre.ActiviteParametre">

    <EditText
        android:id="@+id/tbParametre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="101dp"
        android:ems="10"
        android:inputType="number"
        android:text="frequence deplacement"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_parametre"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClickUpdateDeplacement"
        android:text="changer la frequence"
        tools:layout_editor_absoluteX="97dp"
        tools:layout_editor_absoluteY="220dp" />
</android.support.constraint.ConstraintLayout>